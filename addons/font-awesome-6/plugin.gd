tool
extends EditorPlugin

# ==============================================================================
# Based on Matrixant's FontAwesome5 plugin:
# https://github.com/matrixant/Godot-FontAwesome5
# ==============================================================================

# ==============================================================================
# Declare variables
# ==============================================================================
# ------------------------------------------------------------------- Properties
# ----------------------------------------------------------------------- Global
# -------------------------------------------------------------------- Constants
const ICON: Texture = preload("flag-solid.svg")
# ------------------------------------------------------------------ Enumerators
# ---------------------------------------------------------------------- Signals
# ---------------------------------------------------------------------- Private
var _inspectorPlugin : EditorInspectorPlugin									# Holds icon_name inspector plugin

# ==================================================================================================
#																						GODOT ENGINE
# ==================================================================================================
# Initialize the plugin.
# ==============================================================================
func _enter_tree() -> void:
	add_custom_type("FontAwesome6", "Label", preload("FontAwesome6.gd"), ICON)
	_inspectorPlugin = preload("plugin.inspector.gd").new(self)
	add_inspector_plugin(_inspectorPlugin)

# ==============================================================================
# Clean-up of the plugin.
# ==============================================================================
func _exit_tree() -> void:
	remove_custom_type("FontAwesome6")
	remove_inspector_plugin(_inspectorPlugin)
